extends layout

block content
  h1 New Book
  form(action='/books/new', method='POST')
    //- Display errors if present on form submit
    if errors
      h2.error Whoops! Something went wrong.
      ul.error
        each err in errors
          li= `${err.path.charAt(0).toUpperCase()}${err.path.substring(1)} ${err.message}`
    p
      label(for="title") Title 
      input(name="title" type="text" id="title")
    p
      label(for="author") Author 
      input(name="author" type="text" id="author")
    p
      label(for="genre") Genre 
      input(name="genre" type="text" id="genre")
    p
      label(for="year") Year 
      input(name="year" type="text" id="year")
    p
      input(type="submit" value="Create New Book")
    p
      a.button(href="/") Cancel